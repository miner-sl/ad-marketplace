# Server
PORT=3000
NODE_ENV=development

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook

# Database
# Option 1: Use DATABASE_URL (recommended)
DATABASE_URL=postgresql://user:password@localhost:5432/ad_marketplace

# Option 2: Use individual components (useful for Docker)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=ad_marketplace
# DB_USER=admarketplace
# DB_PASSWORD=admarketplace123

# For Docker Compose, use:
# DATABASE_URL=postgresql://admarketplace:admarketplace123@postgres:5432/ad_marketplace

# TON Network
TON_NETWORK=testnet
TON_API_KEY=your_ton_api_key
TON_WALLET_MNEMONIC=your_wallet_mnemonic_here

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Deal Settings
DEAL_TIMEOUT_HOURS=72
MIN_POST_DURATION_HOURS=24
