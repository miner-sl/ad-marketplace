{
  "name": "ad-marketplace",
  "version": "1.0.0",
  "description": "Telegram Mini App for ads marketplace connecting channel owners and advertisers",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "cron:dev": "tsx watch src/cron-service.ts",
    "cron:start": "node dist/cron-service.js",
    "migrate": "tsx src/db/migrate.ts",
    "migrate:run": "tsx src/db/run_migrations.ts",
    "test": "jest",
    "wallet:escrow": "tsx src/scripts/generate-escrow-wallet.ts",
    "wallet:transfer": "tsx src/scripts/transfer-funds.ts",
    "db:test": "tsx src/scripts/test-db-connection.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose up -d --build",
    "docker:migrate": "docker-compose exec app npm run migrate"
  },
  "keywords": [
    "telegram",
    "marketplace",
    "ads",
    "ton",
    "escrow"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.13.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@ton/core": "^0.63.0",
    "@ton/crypto": "^3.3.0",
    "@ton/ton": "^16.1.0",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "fastify": "^4.26.0",
    "node-cron": "^3.0.3",
    "node-telegram-bot-api": "^0.64.0",
    "ioredis": "^5.3.2",
    "redlock": "^5.0.0-beta.2",
    "pg": "^8.11.3",
    "telegraf": "^4.15.0",
    "winston": "^3.11.0",
    "yamljs": "^0.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/node-telegram-bot-api": "^0.64.13",
    "@types/pg": "^8.10.9",
    "@types/yamljs": "^0.2.34",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
